<Border x:Class="ticktick_WPF.Views.Calendar.CalLoadMore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        VerticalAlignment="Top" Height="18" HorizontalAlignment="Left">
  <Border Name="MoreBorder" Cursor="Hand" Margin="2,1" Tag="{DynamicResource IsDarkTheme}" CornerRadius="3"
          Background="{DynamicResource BaseColorOpacity10}">
    <TextBlock Margin="2,0" HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center"
               FontSize="11" Foreground="{DynamicResource BaseColorOpacity40}" Text="{Binding Title}"/>
  </Border>
</Border>
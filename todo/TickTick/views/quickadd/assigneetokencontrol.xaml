<UserControl x:Class="ticktick_WPF.Views.QuickAdd.AssigneeTokenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="Transparent" Cursor="Hand" ToolTip="{StaticResource ClickToCancel}">
  <Border CornerRadius="2">
    <FrameworkElement.Style>
      <Style>
        <Setter Property="Border.Background">
          <Setter.Value>
            <SolidColorBrush Color="{DynamicResource ColorPrimary}" Opacity="{DynamicResource TagBorderOpacity}"/>
          </Setter.Value>
        </Setter>
      </Style>
    </FrameworkElement.Style>
    <Button Name="TokenText" Background="Transparent" Margin="4,2" VerticalAlignment="Center" FontSize="13"
            Style="{DynamicResource TokenButton}" Foreground="{DynamicResource PrimaryColor}"/>
  </Border>
</UserControl>
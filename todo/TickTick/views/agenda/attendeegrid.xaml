<UserControl x:Class="ticktick_WPF.Views.Agenda.AttendeeGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:agenda="clr-namespace:ticktick_WPF.Views.Agenda">
  <Grid Width="28" Height="28">
    <Rectangle HorizontalAlignment="Center" VerticalAlignment="Center" RadiusX="24" RadiusY="24" Width="24"
               Height="24" ToolTip="{Binding DisplayName}">
      <Shape.Fill>
        <ImageBrush Stretch="Fill" ImageSource="{Binding Avatar}"/>
      </Shape.Fill>
    </Rectangle>
  </Grid>
</UserControl>
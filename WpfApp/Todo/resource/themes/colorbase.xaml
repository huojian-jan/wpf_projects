<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <SolidColorBrush x:Key="MainBackground" Color="{DynamicResource MainWindow}" Opacity="1"/>
  <SolidColorBrush x:Key="ShowProjectBackground" Color="{DynamicResource MainWindow}"/>
  <SolidColorBrush x:Key="DateColorPrimary" Color="{Binding Color, Source={StaticResource PrimaryColor}}"/>
  <SolidColorBrush x:Key="BaseColorOpacity5" Color="{DynamicResource black_06}"/>
  <SolidColorBrush x:Key="ProjectSelectedBackground" Color="{DynamicResource black_10}"/>
  <SolidColorBrush x:Key="TaskSelectedColor" Opacity="0.10"
                   Color="{Binding Color, Source={StaticResource PrimaryColor}}"/>
  <SolidColorBrush x:Key="TaskHoverColor" Opacity="0.04" Color="{Binding Color, Source={StaticResource PrimaryColor}}"/>
</ResourceDictionary>